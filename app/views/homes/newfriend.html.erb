<ul>
  <% @users.each do |user| %>
    <li>
      <%= user.email %>
    </li>
    <li>
    	<% if current_user.friends_with(user.id) %>
    		<%= link_to 'Friend', send_invitations_path(new_friend: user.id),method: :post %>

    	<% else %>
    		<%= link_to 'Add friends', send_invitations_path(new_friend: user.id),method: :post %>
    	<% end %>
    </li>
  <% end %>
</ul>